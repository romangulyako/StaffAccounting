<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="create-user_role-table" author="Roman Gulyako">
        <createTable tableName="user_role">
            <column type="bigint" name="user_id">
                <constraints nullable="false"/>
            </column>
            <column type="bigint" name="role_id">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-primary-key" author="Roman Gulyako">
        <addPrimaryKey tableName="user_role"
                       columnNames="role_id, user_id"
                       constraintName="user_role_pk"/>
    </changeSet>

    <changeSet id="create-user-fk" author="Roman Gulyako">
        <addForeignKeyConstraint baseTableName="user_role"
                                 baseColumnNames="user_id"
                                 constraintName="user_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="create-role-fk" author="Roman Gulyako">
        <addForeignKeyConstraint baseTableName="user_role"
                                 baseColumnNames="role_id"
                                 constraintName="role_fk"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>