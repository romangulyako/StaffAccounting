<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="create-users-table" author="Roman Gulyako">
        <createTable tableName="users">
            <column type="bigint" name="id" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column type="varchar(16)" name="user_name">
                <constraints nullable="false" unique="true"/>
            </column>
            <column type="varchar(255)" name="password">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="DATETIME(6)"/>
            <column name="update_date" type="DATETIME(6)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>