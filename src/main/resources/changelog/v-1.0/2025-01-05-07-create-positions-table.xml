<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-positions-table" author="Roman Gulyako">
        <createTable tableName="positions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="necessary_education_level" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="salary" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="department_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="DATETIME(6)">
                <constraints nullable="true"/>
            </column>
            <column name="update_date" type="DATETIME(6)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-fk-positions-departments" author="Roman Gulyako">
        <addForeignKeyConstraint baseTableName="positions"
                                 baseColumnNames="department_id"
                                 constraintName="FK_department_id"
                                 referencedTableName="departments"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>